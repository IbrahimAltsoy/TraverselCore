@model EntityLayer.Concreate.Guide

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Misafir düzenleme sayfasına Hoşgeldiniz</h1>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        @Html.Label("Ad Soyad")
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Açıklama")
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Resim")
        <input type="text" asp-for="Image" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Twitter")
        <input type="text" asp-for="TwitterUrl" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Instagram")
        <input type="text" asp-for="InstagramUrl" class="form-control" />
    </div>
    <br />
     
    <div class="form-group">
        @Html.Label("Statu Durumu")
        <input class="form-check-input" asp-for="Statu" /> @Html.DisplayNameFor(model => model.Statu)

    </div>
    <br />
   
    <button class="btn btn-outline-primary" type="submit" onclick="return confirm('Güncellemek istediğinden emin misin?')">Güncelle</button>
</form>
<script>
    function clicked(e) {
        if (!confirm('Güncellemek istediğinden emin misin?')) {
            e.preventDefault();
        }
    }
</script>