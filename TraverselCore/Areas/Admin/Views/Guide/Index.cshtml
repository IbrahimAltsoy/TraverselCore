@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var count = 0;
}
@*<style>
    img{
        border-radius:50%;
    }
</style>*@
<h1>Rehber Listesi Sayfasına Hoşgeldiniz</h1>

<table class="table table-bordered">
    <tr>
        <td>#</td>
        <td>Resim</td>
        <td>Ad Soyad</td>
        <td>Açıklama</td>
        <td>Durum</td>
        <td>Değiştir</td>
        <td>Düzenle</td>
    </tr>
    @foreach(var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <th><img src="@item.Image" height="50" style="border-radius:50%"/></th>
            <th>@item.Name</th>
            <th>@item.Description</th>
            @{
                if (item.Statu==true)
                {
                    <td>1</td>
                    <td><a href="/Admin/Guide/ChangeToTrue/@item.Id" class="btn btn-outline-success">Pasif Yap</a></td>

                }
                else
                {
                    <td>2</td>
                    <td><a href="/Admin/Guide/ChangeToTrue/@item.Id" class="btn btn-outline-warning">Aktif Yap</a></td>
                   
                }
            }

            <th><a href="/Admin/Guide/Edit/@item.Id" class="btn btn-outline-primary">Düzenle</a></th>
           
        </tr>
    }
</table>


<a href="/Admin/Guide/AddGuide/" class="btn btn-primary">Ekle</a>