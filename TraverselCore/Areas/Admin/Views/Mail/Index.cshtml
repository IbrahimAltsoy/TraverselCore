@model TraverselCore.Models.MailRequest;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Mail Gönderme sayfasına Hoşgeldiniz</h1>

<form method="post">

    <div class="form-group">
        @Html.Label("Alıcı Mail Adresi")
        <input type="text" asp-for="ReceiverMail" class="form-control" />
       

    </div>
    <div class="form-group">
        @Html.Label("Mail Konusu")
        <input type="text" asp-for="Subject" class="form-control" />
        

    </div>
    <div class="form-group">
        @Html.Label("Mail İçeriği")
        <textarea cols="30" rows="5" type="text" asp-for="Body" class="form-control"></textarea>


    </div>
   

    <button class="btn btn-primary">Gonder</button>
</form>