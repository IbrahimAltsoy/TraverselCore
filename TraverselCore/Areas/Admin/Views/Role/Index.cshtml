@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Role Listesi Sayfasına Hoşgeldiniz</h1>
 @if(Model.Count>0){
<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Role Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
   
    @foreach(var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name</td>
            <td><a href="/Admin/Role/Delete/@item.Id" class="btn btn-danger">Sil</a></td>
                <td><a href="/Admin/Role/Update/@item.Id" class="btn btn-info">Güncelle</a></td>
            
        </tr>
    }
  
   
</table>
}
else
{
            <div>
        <p class ="alert-info">Herhangi bir rol bulunamadı</p>
            </div>
}
<a href="/Admin/Role/Create/" class="btn btn-primary">Rol Ekle</a>