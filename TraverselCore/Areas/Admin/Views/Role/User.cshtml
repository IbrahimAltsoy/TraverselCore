@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Role Listesi Sayfasına Hoşgeldiniz</h1>
 
<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Kullanıcı Adı</th>
        <th>Rol Ata</th>
        <th>Güncelle</th>
    </tr>
   
    @foreach(var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.UserName</td>
            <td><a href="/Admin/Role/AssignRole/@item.Id" class="btn btn-info">Rol Ata</a></td>
              
            
        </tr>
    }
  
   
</table>
