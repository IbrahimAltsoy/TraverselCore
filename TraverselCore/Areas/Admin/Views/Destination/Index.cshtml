@using EntityLayer.Concreate
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Tur Rotaları</h1>
<table class="table table-bordered">
    <tr>
        <th>City</th>
        <th>Fiyat</th>
        <th>Kapasite</th>
        <th>Sitede Gör</th>
        <th>Sil</th>
        <th>Güncelle</th>
       
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.City</td>
            <td>@item.Price</td>
            <td>@item.Capacity</td>
            <td><a href="/Destination/Details/@item.Id" class="btn btn-outline-info">Sitede Gör</a></td>
            <td><a href="/Admin/Destination/DeleteDestination/@item.Id" class="btn btn-outline-danger" onclick="return confirm('Silmek istediğinden emin misin?')">Sil</a></td>
            <td><a href="/Admin/Destination/UpdateDestination/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
           
          
        </tr>
        
    }
</table>
<a href="/Admin/Destination/AddDestination" class="btn btn-primary">Rota Ekle</a>

 <script>
       function clicked(e) {
            if (!confirm('Güncellemek istediğinden emin misin?')) {
                e.preventDefault();
            }
        }
    </script>