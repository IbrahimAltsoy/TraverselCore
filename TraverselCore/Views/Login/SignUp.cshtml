
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Kullanıcı Kayıt Ekranı</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- LINEARICONS -->
	<link rel="stylesheet" href="~/colorlib-regform-26/fonts/linearicons/style.css">

	<!-- STYLE CSS -->
	<link rel="stylesheet" href="~/colorlib-regform-26/css/style.css">
</head>

<body>
	
	<div class="wrapper">
		<div class="inner">
			<img src="~/colorlib-regform-26/images/image-1.png" alt="" class="image-1">
			<form method="post">
				<h3>New Account?</h3>
				<div class="form-holder">
					<span class="lnr lnr-user"></span>
					<input type="text" class="form-control" placeholder="Name" name="Name">
				</div>
				<div class="form-holder">
					<span class="lnr lnr-user"></span>
					<input type="text" class="form-control" placeholder="Surname" name="SurName">
				</div>
				<div class="form-holder">
					<span class="lnr lnr-envelope"></span>
					<input type="text" class="form-control" placeholder="Mail" name="Email">
				</div>
				<div class="form-holder">
					
					<span class="lnr lnr-phone-handset"></span>
					<input type="text" class="form-control" placeholder="Username" name="UserName">
				</div>
				@*// eklendi*@
				<div class="form-holder">

					<span class="lnr lnr-phone-handset"></span>
					<input type="text" class="form-control" placeholder="Cinsiyet" name="Gender">
				</div>
				<div class="form-holder">

					<span class="lnr lnr-phone-handset"></span>
					<input type="text" class="form-control" placeholder="Resim" name="ImageUrl">
				</div>
			@*	//buraya kadar*@
				<div class="form-holder">
					<span class="lnr lnr-lock"></span>
					<input type="password" class="form-control" placeholder="Password" name="Password">
				</div>
				<div class="form-holder">
					<span class="lnr lnr-lock"></span>
					<input type="password" class="form-control" placeholder="Confirm Password" name="ConfirmPassword">
				</div>

				<button>
					<span>Register</span>
				</button>
				<div class="text-center p-t-136">
					<a class="txt2" href="/Login/SignIn/">
						Sign in your Account
						<i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
					</a>
				</div>
			</form>
			
			<img src="~/colorlib-regform-26/images/image-2.png" alt="" class="image-2">
		</div>

	</div>

	<script src="~/colorlib-regform-26/js/jquery-3.3.1.min.js"></script>
	<script src="~/colorlib-regform-26/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>